<resources>

    <style name="Theme.ShoppingAppGreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/deep_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="rcViewBackground">@color/white</item>
        <item name="rcViewItemBackground">@color/white</item>
        <item name="tvColor">@color/black_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <!-- BottomNavigationPanel-->
        <item name="menuPanelBackground">@color/white</item>
        <item name="menuPanelItemSelectedFalse">@color/grey</item>
        <item name="menuPanelItemSelectedTrue">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize items styles -->
        <item name="editTextStyle">@style/EditText.White</item>
        <item name="recyclerViewStyle">@style/RecyclerViewWhite</item>
        <item name="cardViewStyle">@style/CardView.White</item>
        <item name="tabBackgroundFridge">@color/white</item>
        <item name="tabTextColorFridge">@color/black</item>
    </style>

    <style name="Theme.ShoppingAppBlack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_light</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="rcViewBackground">@color/black</item>
        <item name="rcViewItemBackground">@color/black_light2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- BottomNavigationPanel-->
        <item name="menuPanelBackground">@color/black_light2</item>
        <item name="menuPanelItemSelectedFalse">@color/black_light3</item>
        <item name="menuPanelItemSelectedTrue">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize elements styles -->
        <item name="editTextStyle">@style/EditText.Black</item>
        <item name="recyclerViewStyle">@style/RecyclerViewBlack</item>
        <item name="cardViewStyle">@style/CardView.Black</item>
        <item name="popupMenuBackground">@color/black_light2</item>
        <item name="alertDialogTheme">@style/PreferenceDialogTheme</item>
        <item name="tabBackgroundFridge">@color/black</item>
        <item name="tabTextColorFridge">@color/white</item>
    </style>
    <!-- Style for preference screen dialogs-->
    <style name="PreferenceDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@color/black_light</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
    </style>

    <style name="CardView.Black">
        <item name="android:backgroundTint">@color/black_light2</item>
    </style>

    <style name="CardView.White">
        <item name="android:backgroundTint">@color/grey_light</item>
    </style>

    <style name="RecyclerViewBlack">
        <item name="android:background">@color/black</item>
    </style>

    <style name="RecyclerViewWhite">
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditText.Black" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@color/black_light2</item>
    </style>

    <style name="EditText.White" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="Theme.ShoppingAppGreen">

    </style>
    <style name="FridgeTabsStyle" parent="TextAppearance.Design.Tab">

    </style>

    <style name="ButtonStyle.Delete">
        <item name="colorAccent">#F44336</item>
    </style>
</resources>
